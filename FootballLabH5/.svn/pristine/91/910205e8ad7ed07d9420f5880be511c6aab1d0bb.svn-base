    <script type="text/javascript" charset="utf-8">

        $(function () {
        	dataUrl = fl_url.myGuess;
            dataParam = {
               memberId:fl_user.MemberId(),
               showCount: showCount,
               currentPage: currentPage
            };
			loaded();
            Init();
        });

        // 绑定数据html
        function BindData(data) {
       		 data = JSON.parse(data);;
            var html = "";

            if (typeof (data) != undefined && data != null && data.length > 0) {
                for (var i = 0; i < data.length; i++) {
					var liClass="";
					if(i!=0){
						liClass =  "mTop10";
					}
					html += "<li class= '"+liClass+"' onClick=\"goToDetail('" +data[i].id+"')\" >";
                    html += "<div class='content_shigong flexBox clearBoth'>";
                    html += "<div class='conLeft flexBox_zi1'>";
                    html += "<p class='font14'><span class='pull-right rightTextR' style='font-size: 1.2rem;width:30%;'><i>1场</i>场数：</span><time class='pull-left'>"+data[i].guessTime.substring(0,10)+"</time></p>";
                    html += "<h3 style='font-size: 1.2rem;'><span style='font-size: 1.2rem;width:30%;' class='pull-right rightTextR'>";

                    if (data[i].winAmount ==null) {
                        html += "等待开奖";
                    } else {
                        html += "<i class='colorh' style='font-size: 1.2rem;'>"+data[i].winAmount+"</i>中奖：";
                    }
                    html += "</span>投注："+data[i].inputAmount+"</h3>";
                    html += "</div></div>";
                    html += "<div style='clear: both;'></div>";
                    html += "</li>";
                }
            } else {
                html += "<div style='text-align:center;margin-top:40%;'><img src=\"img/myPlan_not.jpg\"/></div>";
            }
            $("#list").append(html);
        }
        
        function goToDetail(id) {
            location.href = "myGuess_detail.html?experts_code=" + getQueryString("experts_code")+"&memberGuessId="+id;
        }
    </script>
