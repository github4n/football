                    tickInterval: 5,
                    labels: {

                        style: {
                            color: '#ccc'
                        },
                        rotation: 0,
                    },
                    lineWidth: 0,
                    tickLength: 3,
                    tickPosition: "inside"
                },
                yAxis: {
                    tickInterval: 1000,
                    max: maxNum + 1100,
                    min: minNum - 1000,
                    gridLineWidth: 0,
                    plotLines: [{
                        label: { text: '44', align: 'left', style: { color: "#ddd" }, x: 10 },
                        value: maxNum,
                        dashStyle: 'LongDashDot',
                        width: 0.5,
